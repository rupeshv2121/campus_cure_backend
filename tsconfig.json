{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2023",
    "module": "ESNext",
    "lib": ["ES2020"],
    "types": ["node"],

    "moduleResolution": "bundler",
    "esModuleInterop": true,

    "strict": true,
    "sourceMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
